{
  "dataset": {
    "path": "data/raw/mad_data.asc",
    "format": "ascii",
    "maxScans": 500
  },
  "model": {
    "earthField": [2.5e-5, -3.4e-6, 3.6e-5],
    "processNoiseVar": 0.05,
    "measurementNoiseVar": 1.0e-18,
    "measurementScale": 0.0,
    "observationModel": "dipole"
  },
  "filter": {
    "type": "ekf",
    "params": {
      "numParticles": 500,
      "stateDimension": 10,
      "resamplePolicy": "adaptive",
      "essThresholdRatio": 0.5
    }
  },
  "tracker": {
    "enabled": true,
    "params": {
      "maxTracks": 10
    }
  },
  "logging": {
    "enabled": true,
    "level": "debug"
  },
  "viz": {
    "enabled": true,
    "alert": {
      "enabled": true,
      "thresholdTesla": 0.0,
      "cooldownMs": 800,
      "soundPath": "sound/button-11.wav",
      "scope": "map"
    }
  }
}
